{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "config": {
    "font": "Circular Std",
    "text": {
      "color": "#676A86",
      "align": "left",
      "baseline": "middle",
      "dx": 7,
      "dy": 0,
      "fontSize": 11
    },
    "view": {
      "stroke": null,
      "continuousWidth": 400,
      "continuousHeight": 300,
      "discreteWidth": 400,
      "discreteHeight": 300
    },
    "range": {
      "category": [
        "#36B7B4",
        "#E6224B",
        "#F4C245",
        "#0063AF",
        "#00A767",
        "#179FDB",
        "#EB5C2E"
      ],
      "diverging": ["#E6224B", "#E54753", "#C9C9C9", "#179FDB", "#122B39"],
      "heatmap": ["#C9C9C9", "#179FDB", "#0063AF", "#122B39"],
      "ordinal": ["#00A767", "#36B7B4", "#179FDB", "#0063AF", "#243B5A"]
    },
    "bar": {"color": "#179fdb"},
    "line": {"color": "#e6224b"},
    "rule": {"color": "#676A86"},
    "area": {"opacity": 0.3},
    "point": {"filled": true, "size": 80, "color": "#e6224b", "opacity": 0.95},
    "geoshape": {"stroke": "white", "strokeWidth": 0.3},
    "rect": {"fill": "#d6d4d4", "opacity": 0.3},
    "axis": {
      "labelColor": "#676A86",
      "labelFontSize": 11,
      "labelFont": "Circular Std",
      "labelOpacity": 0.7,
      "tickColor": "#676A86",
      "tickOpacity": 0.5,
      "domainColor": "#676A86",
      "domainOpacity": 0.5,
      "gridColor": "#676A86",
      "gridDash": [2, 2],
      "gridOpacity": 0.5,
      "title": null,
      "titleColor": "#676A86",
      "titleOpacity": 0.8,
      "tickSize": 4,
      "tickMinStep":0.01
    },
    "axisXDiscrete": {
      "grid": false,
      "labelAngle": 0,
      "tickCount": 10,
      "tickOpacity": 0.5,
      "title": null
    },
    "axisYDiscrete": {"ticks": false, "labelPadding": 5},
    "axisXTemporal": {"grid": false, "ticks": true},
    "axisXQuantitative": {"grid": true},
    "axisYQuantitative": {
      "gridColor": "#676A86",
      "gridDash": [1, 5],
      "gridOpacity": 0.5,
      "ticks": false,
      "labelPadding": 5,
      "tickCount": 8,
      "titleAngle": 0,
      "titleAlign": "left",
      "titleBaseline": "bottom",
      "titleX": 0,
      "titleY": -5
    },
    "legend": {
      "titleColor": "#122b39",
      "title": null,
      "labelColor": "#122b39",
      "labelFontSize": 11
    },
    "title": {
      "color": "#122b39E6",
      "subtitleColor": "#676A86",
      "font": "Circular Std",
      "subtitleFont": "Circular Std",
      "anchor": "start",
      "fontSize": 14,
      "subtitleFontSize": 12,
      "subtitlePadding": 4,
      "offset": 0,
      "frame": "group"
    }
  },
  "height": 300,
  "width": 450,
  "title":{
    "text":"10-year gilt yields hit highest level since the 2008 financial crisis",
    "subtitle":[
      "Source: UK Debt Management Office",
      ""
    ],
    "anchor": "start"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/jhellingsdata/RADataHub/refs/heads/main/ChartOfTheDay/gilt/yields.csv"
  },
  "transform": [{"filter": "datum.medium != 0"}],
  "encoding": {"x": {"field": "month", "type": "temporal"}},
  "layer": [
    {
      "encoding": {
        "y": {
          "field": "medium",
          "type": "quantitative",
          "title": "10-year gilt yield",
          "axis": {"format": "%", "tickMinStep": 0.01}
        },
        "tooltip": [
          {
            "field": "month",
            "type": "temporal",
            "title": "Month",
            "format": "%b %Y"
          },
          {
            "field": "medium",
            "type": "quantitative",
            "title": "10-year yield",
            "format": ".3%"
          }
        ]
      },
      "layer": [
        {"mark": {"type": "line", "color": "#36B7B4"}},
        {
          "transform": [{"filter": {"param": "hover", "empty": false}}],
          "mark": {
            "type": "point",
            "color": "#36B7B4",
            "filled": false,
            "size": 40
          }
        }
      ]
    },
    {
      "mark": "rule",
      "encoding": {
        "opacity": {
          "condition": {"value": 0.3, "param": "hover", "empty": false},
          "value": 0
        },
        "tooltip": [
          {
            "field": "month",
            "type": "temporal",
            "format": "%b %Y",
            "title": "Month"
          },
          {
            "field": "medium",
            "type": "nominal",
            "format": ".3%",
            "title": "10-year yield"
          }
        ]
      },
      "params": [
        {
          "name": "hover",
          "select": {
            "type": "point",
            "fields": ["month"],
            "nearest": true,
            "on": "pointerover",
            "clear": "pointerout"
          }
        }
      ]
    },
    {
      "encoding": {
        "x": {"field": "month", "type": "temporal", "aggregate": "max"},
        "y": {
          "field": "medium",
          "type": "quantitative",
          "aggregate": {"argmax": "month"}
        }
      },
      "layer": [
        {"mark": {"type": "point", "color": "#36B7B4"}},
        {
          "mark": {"type": "text", "color": "#36B7B4"},
          "encoding": {
            "text": {
              "field": "medium",
              "type": "quantitative",
              "aggregate": {"argmax": "month"},
              "format": ".3%"
            }
          }
        }
      ]
    }
  ]
}