{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "config": {
      "font": "Circular Std",
      "view": {"stroke": "transparent"},
      "axis": {
        "labelColor": "#676A86",
        "labelFontSize": 11,
        "labelFont": "Circular Std",
        "labelOpacity": 0.7,
        "tickColor": "#676A86",
        "tickOpacity": 0.5,
        "domainColor": "#676A86",
        "domainOpacity": 0.5,
        "gridColor": "#676A86",
        "gridDash": [2, 2],
        "gridOpacity": 0.5,
        "titleColor": "#676A86",
        "titleOpacity": 0.8,
        "tickSize": 4
      },
      "axisXDiscrete": {
        "grid": false,
        "labelAngle": 0,
        "tickCount": 10,
        "tickOpacity": 0.5
      },
      "scale": {"zero": false, "continuousPadding": 10},
      "axisYDiscrete": {"ticks": false, "labelPadding": 5},
      "axisXQuantitative": {"grid": false, "format": ".0%"},
      "axisXTemporal": {"grid": false},
      "axisYQuantitative": {
        "gridColor": "#676A86",
        "gridDash": [1, 5],
        "gridOpacity": 0.5,
        "ticks": false,
        "labelPadding": 5,
        "tickCount": 8,
        "titleAngle": 0,
        "titleAlign": "left",
        "titleBaseline": "bottom",
        "titleX": 0,
        "titleY": -5,
        "format": ".0%",
        "grid": false
      },
      "legend": {
        "titleColor": "#122b39",
        "title": null,
        "labelColor": "#122b39",
        "labelFontSize": 11,
        "orient": "top-right"
      }
    },
    "encoding": {
      "x": {
        "scale": {"domain": [0.033, 0.07]},
        "title": "Unemployment Rate",
        "axis": {"values": [0.03, 0.04, 0.05, 0.06, 0.07]}
      },
      "y": {"scale": {"domain": [0.015, 0.04]}, "title": "Vacancy Rate",
      "axis": {"values":[0.02, 0.03, 0.04]}}
    },
    "height": "400",
    "width": "600",
    "title": {
      "text": "UK Beveridge curves",
      "subtitle": ["Source: ONS and author's calculations", ""]
    },
    "data": {
      "url": "https://raw.githubusercontent.com/jhellingsdata/RADataHub/refs/heads/main/Article%20Charts/F62/beveridge_curve_data.csv"
    },
    "transform": [
          {
              "filter": "datum['Time Period'] != null"
          },
          {
              "filter": "datum['Time Period'] == '2014-2019' || datum['Time Period'] == '2022'"
          }
      ],
    "layer": [
      {
        "mark": {"type": "point", "filled": true, "size": 60},
        "params": [
          {
            "name": "hovered",
            "select": {
              "type": "point",
              "fields": ["Time Period"],
              "toggle": false,
              "on": "mouseover"
            }
          },
          {
            "name": "clicked",
            "select": {"type": "point", "fields": ["Time Period"]}
          }
        ],
        "encoding": {
          "x": {"field": "unemployment", "type": "quantitative"},
          "y": {"field": "vacancy", "type": "quantitative"},
          "color": {
            "field": "Time Period",
            "scale": {
              "domain": ["2014-2019", "2022"],
              "range": ["#36B7B4", "#E6224B"]
            }
          },
          "opacity": {"value": 0.8},
          "tooltip": [
            {
              "field": "date",
              "type": "temporal",
              "title": "Month",
              "format": "%b %Y"
            },
            {
              "field": "unemployment",
              "type": "quantitative",
              "title": "Unemployment rate",
              "format": ".1%"
            },
            {
              "field": "vacancy",
              "type": "quantitative",
              "title": "Vacancy rate",
              "format": ".1%"
            }
          ]
        }
      },
      {
        "mark": {"type": "line", "strokeWidth": 3},
        "encoding": {
          "x": {"field": "unemployment", "type": "quantitative"},
          "y": {"field": "vacancy", "type": "quantitative"},
          "color": {
            "field": "Time Period",
            "scale": {
              "domain": ["2014-2019", "2022"],
              "range": ["#36B7B4", "#E6224B"]
            }
          },
          "opacity": {
            "condition": {
              "test": {
                "or": [
                  {"param": "hovered", "empty": false},
                  {"param": "clicked", "empty": false}
                ]
              },
              "value": 0.8
            },
            "value": 0
          }
        }
      },
      {
        "transform": [
          {"filter": {"field": "Time Period", "equal": "2014-2019"}},
          {
            "aggregate": [
              {"op": "mean", "field": "unemployment", "as": "mean_unemployment"},
              {"op": "mean", "field": "vacancy", "as": "mean_vacancy"}
            ]
          }
        ],
        "mark": {"type": "point", "filled": true, "size": 60, "color": "black"},
        "encoding": {
          "x": {"field": "mean_unemployment", "type": "quantitative"},
          "y": {"field": "mean_vacancy", "type": "quantitative"},
          "tooltip": [
            {
              "field": "mean_unemployment",
              "type": "quantitative",
              "title": "Mean unemployment Rate, 2014-2019",
              "format": ".1%"
            },
            {
              "field": "mean_vacancy",
              "type": "quantitative",
              "title": "Mean vacancy rate, 2014-2019",
              "format": ".1%"
            }
          ]
        }
      },
      {
        "transform": [
          {"filter": {"field": "Time Period", "equal": "2014-2019"}},
          {
            "aggregate": [
              {"op": "mean", "field": "unemployment", "as": "mean_unemployment"},
              {"op": "mean", "field": "vacancy", "as": "mean_vacancy"}
            ]
          }
        ],
        "mark": {
          "type": "rule",
          "strokeDash": [4, 4],
          "color": "black",
          "opacity": 0.5
        },
        "encoding": {
          "x": {"field": "mean_unemployment", "type": "quantitative"},
          "y": {"field": "mean_vacancy", "type": "quantitative"},
          "y2": {"value": "height"}
        }
      },
      {
        "transform": [
          {"filter": {"field": "Time Period", "equal": "2022"}},
          {
            "aggregate": [
              {"op": "mean", "field": "unemployment", "as": "mean_unemployment"},
              {"op": "mean", "field": "vacancy", "as": "mean_vacancy"}
            ]
          }
        ],
        "mark": {"type": "point", "filled": true, "size": 60, "color": "black"},
        "encoding": {
          "x": {"field": "mean_unemployment", "type": "quantitative"},
          "y": {"field": "mean_vacancy", "type": "quantitative"},
          "tooltip": [
            {
              "field": "mean_unemployment",
              "type": "quantitative",
              "title": "Mean unemployment Rate, 2022",
              "format": ".1%"
            },
            {
              "field": "mean_vacancy",
              "type": "quantitative",
              "title": "Mean vacancy rate, 2022",
              "format": ".1%"
            }
          ]
        }
      },
      {
        "transform": [
          {"filter": {"field": "Time Period", "equal": "2022"}},
          {
            "aggregate": [
              {"op": "mean", "field": "unemployment", "as": "mean_unemployment"},
              {"op": "mean", "field": "vacancy", "as": "mean_vacancy"}
            ]
          }
        ],
        "mark": {
          "type": "rule",
          "strokeDash": [4, 4],
          "color": "black",
          "opacity": 0.5
        },
        "encoding": {
          "x": {"field": "mean_unemployment", "type": "quantitative"},
          "y": {"field": "mean_vacancy", "type": "quantitative"},
          "y2": {"value": "height"}
        }
      },
      {
        "data": {
          "values": [
            {"unemployment": 0, "vacancy": 0},
            {
              "unemployment": 0.047798172969373776,
              "vacancy": 0.023648104653912327
            }
          ]
        },
        "mark": {
          "type": "line",
          "color": "#676A86",
          "opacity": 0.5,
          "clip": true,
          "strokeWidth": 1.5
        },
        "transform": [
          {"regression": "vacancy", "on": "unemployment", "extent": [0, 0.1]}
        ],
        "encoding": {
          "x": {"field": "unemployment", "type": "quantitative"},
          "y": {"field": "vacancy", "type": "quantitative"}
        }
      },
      {
        "data": {
          "values": [
            {"unemployment": 0, "vacancy": 0},
            {"unemployment": 0.03850178325855341, "vacancy": 0.035532441998673794}
          ]
        },
        "mark": {
          "type": "line",
          "color": "#676A86",
          "opacity": 0.5,
          "clip": true,
          "strokeWidth": 1.5
        },
        "transform": [
          {"regression": "vacancy", "on": "unemployment", "extent": [0, 0.1]}
        ],
        "encoding": {
          "x": {"field": "unemployment", "type": "quantitative"},
          "y": {"field": "vacancy", "type": "quantitative"}
        }
      }
    ]
  }