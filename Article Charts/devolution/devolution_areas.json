{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "hconcat": [
      {
        "title": "Policy Areas",
        "data": {
          "url": "https://raw.githubusercontent.com/jhellingsdata/RADataHub/refs/heads/main/Article%20Charts/devolution/devolution_areas.csv"
        },
        "transform": [
          {
            "filter": "datum.Category === 'Policy Area'"
          },
          {
            "fold": ["Scotland", "Wales", "Northern Ireland"],
            "as": ["Region", "Devolution"]
          }
        ],
        "mark": "rect",
        "encoding": {
          "x": {
            "field": "Region",
            "type": "nominal",
            "title": "Regions",
            "axis": {"labelAngle": 0}
          },
          "y": {
            "field": "Item",
            "type": "nominal",
            "title": null
          },
          "color": {
            "field": "Devolution",
            "type": "nominal",
            "scale": {
              "domain": ["fully", "partially", "not devolved"],
              "range": ["#0000ff", "#add8e6", "#d3d3d3"]
            },
            "legend": {
              "title": "Devolution Level",
              "labelColor": "#b4c8d8"
            }
          }
        }
      },
      {
        "title": "Taxes",
        "data": {
          "url": "https://raw.githubusercontent.com/jhellingsdata/RADataHub/refs/heads/main/Article%20Charts/devolution/devolution_areas.csv"
        },
        "transform": [
          {
            "filter": "datum.Category === 'Tax'"
          },
          {
            "fold": ["Scotland", "Wales", "Northern Ireland"],
            "as": ["Region", "Devolution"]
          }
        ],
        "mark": "rect",
        "encoding": {
          "x": {
            "field": "Region",
            "type": "nominal",
            "title": "Regions",
            "axis": {"labelAngle": 0}
          },
          "y": {
            "field": "Item",
            "type": "nominal",
            "title": null
          },
          "color": {
            "field": "Devolution",
            "type": "nominal",
            "scale": {
              "domain": ["fully", "partially", "not devolved"],
              "range": ["#0000ff", "#add8e6", "#d3d3d3"]
            },
            "legend": null
          }
        }
      }
    ],
    "config": {
    // TODO: Make wider, make region names diagonal, add white space between table cells, make different colors for each region
      "font": "Circular Std",
      "view": {"stroke": "transparent"},
      "range": {
        "category": [
          "#36B7B4",
          "#E6224B",
          "#F4C245",
          "#0063AF",
          "#00A767",
          "#179FDB",
          "#EB5C2E"
        ]
      },
      "point": {"filled": true, "size": 80, "color": "#e6224b", "opacity": 0.95},
      "axis": {
        "labelColor": "#676A86",
        "labelFontSize": 11,
        "labelFont": "Circular Std",
        "labelOpacity": 0.7,
        "tickColor": "#676A86",
        "tickOpacity": 0.5,
        "domainColor": "#676A86",
        "domainOpacity": 0.5,
        "gridColor": "#676A86",
        "gridDash": [2, 2],
        "gridOpacity": 0.5,
        "title": null,
        "titleColor": "#676A86",
        "titleOpacity": 0.8,
        "tickSize": 4
      },
      "axisXDiscrete": {
        "grid": false,
        "labelAngle": 0,
        "tickCount": 10,
        "tickOpacity": 0.5,
        "title": null
      },
      "axisYDiscrete": {"ticks": false, "labelPadding": 5},
      "axisXQuantitative": {"grid": true},
      "axisYQuantitative": {
        "gridColor": "#676A86",
        "gridDash": [1, 5],
        "gridOpacity": 0.5,
        "ticks": false,
        "labelPadding": 5,
        "tickCount": 8,
        "titleAngle": 0,
        "titleAlign": "left",
        "titleBaseline": "bottom",
        "titleX": 0,
        "titleY": -5
      },
      "legend": {
        "titleColor": "#122b39",
        "title": null,
        "labelColor": "#122b39",
        "labelFontSize": 11
      }
    }
  }
  