{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.20.1.json",
  "background": "transparent",
  "data": {
    "url": "https://raw.githubusercontent.com/jhellingsdata/RADataHub/main/AGP%20Slides/Module%201/g7_labor_productivity_long.csv"
  },
  "autosize": {"type": "fit", "contains": "padding", "resize": false},
  "layer": [
    {
      "mark": {"type": "line"},
      "encoding": {
        "x": {"axis": {"format": "%Y"}, "field": "year", "type": "temporal"},
        "y": {
          "axis": {"format": "%"},
          "field": "indexed_2000",
          "title": "Investment (% of GDP)",
          "type": "quantitative"
        },
        "color": {
          "field": "country",
          "legend": null
        },
        "strokeWidth": {
          "condition": {"test": "datum.country === 'United Kingdom'", "value": 3},
          "value": 2
        },
        "opacity": {
          "condition": {"test": "datum.country === 'United Kingdom'", "value": 1},
          "value": 0.6
        }
      }
    },
    {
      "transform": [
        {
          "aggregate": [{"op": "argmax", "field": "year", "as": "last"}],
          "groupby": ["country"]
        },
        {"calculate": "datum.last.year", "as": "year"},
        {"calculate": "datum.last.indexed_2000", "as": "value"}
      ],
      "mark": {"type": "circle", "size": 50},
      "encoding": {
        "x": {"field": "year", "type": "temporal"},
        "y": {"field": "value", "type": "quantitative"},
        "color": {
          "field": "country",
          "legend": null
        },
        "opacity": {
          "condition": {"test": "datum.country === 'United Kingdom'", "value": 1},
          "value": 0.6
        }
      }
    },
    {
      "transform": [
        {
          "aggregate": [{"op": "argmax", "field": "year", "as": "last"}],
          "groupby": ["country"]
        },
        {"calculate": "datum.last.year", "as": "year"},
        {"calculate": "datum.last.indexed_2000", "as": "value"},
        {"filter": "datum.country === 'United Kingdom'"}
      ],
      "mark": {"type": "text", "align": "left", "dx": 8, "baseline": "middle", "fontWeight": "bold"},
      "encoding": {
        "x": {"field": "year", "type": "temporal"},
        "y": {"field": "value", "type": "quantitative"},
        "text": {"field": "country"},
        "color": {
          "field": "country",
          "legend": null
        }
      }
    }
  ],
  "config": {
    "font": "Circular Std",
    "mark": {"line": {"interpolate": "monotone"}},
    "view": {"stroke": "transparent", "width": 600, "height": 400},
    "range": {
      "category": [
        "#36B7B4",
        "#E6224B",
        "#F4C245",
        "#0063AF",
        "#00A767",
        "#179FDB",
        "#EB5C2E"
      ],
      "diverging": ["#E6224B", "#E54753", "#C9C9C9", "#179FDB", "#122B39"],
      "heatmap": ["#C9C9C9", "#179FDB", "#0063AF", "#122B39"],
      "ordinal": ["#00A767", "#36B7B4", "#179FDB", "#0063AF", "#243B5A"]
    },
    "axisX": {
      "domainColor": "#676A86",
      "domainOpacity": 0.5,
      "grid": false,
      "labelAngle": 0,
      "labelColor": "#676A86",
      "labelOpacity": 0.7,
      "orient": "bottom",
      "tickColor": "#676A86",
      "tickCount": 10,
      "tickOpacity": 0.5,
      "title": false,
      "titleAlign": "center",
      "titleAnchor": "middle",
      "titleColor": "#676A86",
      "titleFontSize": 12,
      "titleOpacity": 0.8,
      "titleY": -15
    },
    "axisY": {
      "domainColor": "#676A86",
      "domainOpacity": 0.5,
      "gridColor": "#676A86",
      "gridDash": [1, 5],
      "gridOpacity": 0.5,
      "labelColor": "#676A86",
      "labelOpacity": 0.7,
      "labelPadding": 5,
      "tickColor": "#676A86",
      "tickCount": 8,
      "tickOpacity": 0.5,
      "ticks": false,
      "titleAlign": "left",
      "titleAngle": 0,
      "titleBaseline": "bottom",
      "titleColor": "#676A86",
      "titleFontSize": 12,
      "titleOpacity": 0.8,
      "titleX": 0,
      "titleY": -7
    }
  }
}
