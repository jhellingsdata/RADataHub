{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/jhellingsdata/RADataHub/main/Chart%20Packs/Productivity/map%20of%20the%20day/lad_2021.geojson",
    "format": {"type": "json", "property": "features"}
  },
  "transform": [
    {
      "lookup": "properties.LAD21CD",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/jhellingsdata/RADataHub/main/Chart%20Packs/Productivity/map%20of%20the%20day/lad_prod_rel_wide.csv"
        },
        "key": "area_code",
        "fields": [
          "area_code",
          "name",
          "2004",
          "2005",
          "2006",
          "2007",
          "2008",
          "2009",
          "2010",
          "2011",
          "2012",
          "2013",
          "2014",
          "2015",
          "2016",
          "2017",
          "2018",
          "2019",
          "2020",
          "2021"
        ]
      }
    },
    {"calculate": "datum['2021']", "as": "value"}
  ],
  "projection": {"type": "identity", "reflectY": true},
  "layer": [
    {
      "mark": {
        "type": "geoshape",
        "color": "red",
        "stroke": "grey",
        "strokeWidth": 0.5,
        "clip": true
      },
      "encoding": {
        "color": {
          "field": "value",
          "type": "quantitative",
          "legend": {
            "title": "GVA per hour",
            "titleFontWeight": "normal",
            "labelExpr": "(datum.value == 0.7 ? '<' : datum.value == 1.5 ? '>' : '' )+format(datum.value, '.0%')+(datum.value==1? ' of median' : '')",
            "values": [0.7, 1, 1.25, 1.5]
          },
          "scale": {
            "clamp": true,
            "domain": [0.7, 1.5],
            "type": "linear",
            "range": [
              "rgb(111, 181, 219)",
              "rgb(73, 191, 161)",
              "rgb(230, 189, 81)",
              "rgb(235, 61, 75)"
            ]
          }
        },
        "tooltip": [
          {"field": "name", "title": "Authourity"},
          {"field": "value", "title": "Productivity", "format": ".0%"}
        ]
      }
    }
  ],
  "width": 600,
  "height": 800,
  "config": {"view": {"strokeWidth": 0}, "font": "Circular Std"},
  "autosize": {"type": "fit", "contains": "padding", "resize": false}
}